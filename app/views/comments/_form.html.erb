<%= form_with model: @comment, local: true do |f| %>


  <% if @comment.errors.any? %>
  <div>
    <li class="alert alert-danger"> <%= @comment.errors.full_messages %> </li>
  <% end %>
  </div>

  <div>
      <%= f.label :description %>
      <%= f.text_area :description ,class: "form-control"%>
  </div><br />

  <div>
  <%= f.label :image %>
  <%= f.file_field :image,class: "form-control" %>
  </div>


  <div>
    <%= f.label :post_id, id: :post_id , class:'form-label'%><br/>
    <%= f.collection_select(:post_id, Post.all, :id, :title, {}, {multiple: false, class: 'dropdown-item',class: "form-control"}) %>
  </div> <br />
  <div>
      <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
