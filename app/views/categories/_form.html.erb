<%= form_with model: @category, local: true do |f| %>
  <% if @category.errors.any? %>
  <div>
    <li class="alert alert-danger"> <%= @category.errors.full_messages %> </li>
  <% end %>
  </div>
  <div>
  <%= f.label :title %>
  <%= f.text_field :title ,class: "form-control"%>
  </div><br />
  <div>
  <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
