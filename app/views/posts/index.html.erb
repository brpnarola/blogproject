<%= link_to "Add New Post", new_post_path, class: "btn btn-primary"%><br/><br/>
<table class="table table-bordered">
<%= button_tag "All Approve", id: :approve_post, class: "btn btn-info", remote: false %>
  <tr>
    <td colspan="5" style="text-align:center;"> <h4> Post Details </h4>
  </tr>
  <tr>
    <td> </td>
    <td> Id </td>
    <td> Title </td>
    <td> Description </td>
    <td> Category Name </td>
    <td> User Name </td>
    <td colspan="3" align="center"> Crud Opetaion </td>
  </tr>
  <% @posts.each do |post| %>
  <tr>
   <% unless post.post_delete_status %>
    <td>
      <% unless post.approval %>
        <%= check_box_tag "post_#{post.id}", post.id, false, class: "approve" %>
      <% end %>
    </td>
    <td> <%= post.id %> </td>
    <td> <%= post.title %> </td>
    <td> <%= post.description %> </td>
    <td> <%= link_to post.category.title, categories_path %> </td>
    <td> <%= post.user.nil? ? "" : post.user.username %> </td>
    <td> <%= link_to "Show", post_path(post), class: "btn btn-info"%> </td>
    <td> <%= link_to "Edit", edit_post_path(post), class: "btn btn-info" %></td>
    <td> <%= link_to "Soft Delete", soft_delete_post_path(post), method: :patch, data: {confirm: 'Are You sure'}, class: "btn btn-danger" %></td>
    <td> <% if post.approval %>
          <%= 'Approve' %>
         <% else %>
          <%= link_to "Approve", approve_post_path(post), method: :patch %>
         <% end %>
    </td>
    <td>  </td>
  </tr>
   <% end %>
  <% end %>
</table>
