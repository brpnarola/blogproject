<form remote:true>
  <tr>
  <% if user_signed_in? %>
    Logged In As <%= current_user.username %> <br/>
    <%= link_to "Edit Profile", edit_user_registration_path,class: "btn btn-primary"  %> <br/> <br/>
    <%= link_to "Log Out" ,destroy_user_session_path, method: :delete, class: "btn btn-primary" %> <br/>
    <% if current_user.role == "admin" %><br/>
      <%= link_to "All Users", users_path, class: "btn btn-primary"%>
    <% end %>
  </tr>
  <tr>
  <% else %>
    <%= link_to "Sign Up" , new_user_registration_path,class: "btn btn-primary" %>
    <%= link_to "Sign In" , new_user_session_path ,class: "btn btn-primary"%>
  <% end %>
  </tr>
</form>
